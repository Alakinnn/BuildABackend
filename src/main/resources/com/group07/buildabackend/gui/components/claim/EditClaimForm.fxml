<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group07.buildabackend.gui.components.claim.EditClaimFormController">
    <children>
        <VBox layoutX="26.0" prefHeight="534.0" prefWidth="585.0">
            <children>
            <HBox alignment="CENTER_LEFT" disable="true" layoutX="10.0" layoutY="10.0" prefHeight="49.0" prefWidth="635.0">
               <children>
                  <Label prefHeight="20.0" prefWidth="151.0" text="Claim ID:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Text fx:id="claimId" strokeType="OUTSIDE" strokeWidth="0.0" text="claimId">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
                <HBox alignment="CENTER_LEFT" disable="true" prefHeight="49.0" prefWidth="635.0">
                    <children>
                        <Label prefHeight="20.0" prefWidth="151.0" text="Insured Customer:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ChoiceBox fx:id="insuredCustomerChoice" disable="true" prefWidth="150.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="55.0" prefWidth="635.0">
                    <children>
                        <Label prefHeight="20.0" prefWidth="152.0" text="Claim Amount:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="claimAmountField" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="635.0">
                    <children>
                        <Label prefHeight="20.0" prefWidth="153.0" text="Exam Date:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <DatePicker fx:id="examDatePicker" prefHeight="26.0" prefWidth="152.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="586.0" style="-fx-background-color: rgba(194, 223, 237);">
                    <children>
                        <Label prefHeight="20.0" prefWidth="578.0" text=" Banking Info">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="635.0">
                    <children>
                        <Label prefHeight="20.0" prefWidth="155.0" text="Bank Name:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="bankNameField" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="635.0">
                    <children>
                        <Label prefHeight="20.0" prefWidth="156.0" text="Receiver Name:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="receiverNameField" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="635.0">
                    <children>
                        <Label prefHeight="20.0" prefWidth="157.0" text="Account Number:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="accountNumberField" prefHeight="26.0" prefWidth="145.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="51.0" prefWidth="635.0">
                    <children>
                        <Button fx:id="submitBtn" alignment="CENTER" mnemonicParsing="false" onAction="#onSubmit" text="Submit" textAlignment="CENTER" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
