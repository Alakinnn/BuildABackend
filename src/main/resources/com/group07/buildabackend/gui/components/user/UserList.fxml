<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group07.buildabackend.gui.components.user.UserListController">
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <TextField fx:id="filterValField" prefHeight="26.0" prefWidth="158.0" promptText="Filter" />
                  <ChoiceBox fx:id="filterChoice" prefHeight="26.0" prefWidth="82.0" />
                  <Button mnemonicParsing="false" onAction="#onFilter" prefHeight="26.0" prefWidth="62.0" text="Find" />
               </children>
            </HBox>
            <TableView fx:id="table" prefHeight="200.0" prefWidth="302.0">
              <columns>
                <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="fullNameCol" prefWidth="75.0" text="Full Name" />
                  <TableColumn fx:id="roleCol" prefWidth="75.0" text="Role" />
                  <TableColumn fx:id="emailCol" prefWidth="75.0" text="Email" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
